<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="6dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:gravity="right|center"
            android:textSize="14dp"
            card_view:layout_constraintLeft_toRightOf="@+id/order_title"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintHorizontal_bias="0.872" />


        <TextView
            android:id="@+id/order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="15dp"
            android:gravity="center|left"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/order_title"
            card_view:layout_constraintRight_toLeftOf="@+id/textView"
            android:layout_marginRight="8dp" />




        <TextView
            android:id="@+id/order_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="desc"
            card_view:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/order_time" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/order_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/order_date"
            tools:layout_editor_absoluteX="292dp"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="20dp"
                android:textColor="@color/price"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="7dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="count"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/take_comment"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/textview_border"
            android:text="@string/take_comment"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="7dp"
            card_view:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteY="92dp"
            tools:layout_editor_absoluteX="313dp" />

        <Button
            android:id="@+id/take_delete"
            android:background="@drawable/textview_border"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/take_delete"
            card_view:layout_constraintRight_toLeftOf="@+id/take_comment"
            android:layout_marginRight="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteY="110dp"
            tools:layout_editor_absoluteX="218dp" />


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>